{
  "env": {
    "browser": true,
    "es2021": true,
    "jest": true
  },
  "extends": ["eslint:recommended", "plugin:react/recommended", "plugin:prettier/recommended"],
  "overrides": [],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["react", "eslint-custom-plugin"],
  "rules": {
    "react/react-in-jsx-scope": "off",
    "linebreak-style": ["error", "unix"],
    "eslint-custom-plugin/lowercaseFunctions": "error"
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
